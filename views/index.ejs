        </p>
        <script>
            const fileSelector = document.getElementById('file-selector');
            fileSelector.addEventListener('change', (event) => {
                
              const file = event.target.files[0];
              console.log(file);
              readJson(file);  
            });

            function readJson(file) {

                const reader = new FileReader();
                reader.addEventListener('load', (event) => {
                    //console.log(event.target.result)
                    var myData = JSON.parse(event.target.result);
                    console.log(document.getElementById("myData"))
                    rp(myData, document.getElementById("myData"));

                });
                reader.readAsText(file);
                
             function rp(myData, element){
                for (const key in myData){
                    let div = document.createElement('div');
                    div.className = "columns"
                       if(typeof myData[key] == "string"){

                         let divCode = document.createElement('div')
                         divCode.className = "column is-one-third"
                         divCode.innerHTML = '<input class="input is-success" type="text" readonly value="'+key+'">';
                         let divEng = document.createElement('div')
                         divEng.className = "column is-one-third"
                         divEng.innerHTML = '<input class="input is-warning" type="text" readonly value="'+myData[key]+'">';
                         let divToTranslate = document.createElement('div')
                         divToTranslate.className = "column is-one-third"
                         divToTranslate.innerHTML = '<input class="input" type="text"></input>'
                         div.appendChild(divCode);
                         div.appendChild(divEng);
                         div.appendChild(divToTranslate);  
                         element.appendChild(div);
                       }
                       else{
                            console.log(key);
                            let divTitle = document.createElement('div')
                            divTitle.className = "column is-one-fifth"
                            divTitle.innerHTML = key;
                            div.appendChild(divTitle);
                            element.appendChild(div);
                            rp(myData[key], element)
                       }
                       
                       console.log(key + " - " + myData[key])
                }
                
             }   
}
          </script>
      </body>

</html>