<section id="selection-section" class="section pb-1">
  <div class="tile is-ancestor p-2">
    <div class="tile is-vertical is-4">
      <article class="panel p-2">
        <p class="panel-heading has-text-white first-question">
          Select a language you want to translate to. (AI will help you)
        </p>

        <div class="panel-block" id="language">

              <div class="steps-content">        
                <div class="container">
                  <div class="input-field col s6">
                    <input placeholder="e.g French" id="search" type="text" class="validate" value="" />
                  </div>
                </div>
                <div id="countryList"></div>
              </div>
        </div>

      </article>
    </div>
    <div class="tile is-vertical is-4">
      <article class="panel p-2 not-showing-at-startup">
        <p class="panel-heading has-text-white second-question animated">
          Does a previous translation in this language exist?
        </p>
    
        <div class="panel-block" id="language">
    
        <div class="select">
          <select id="select-mode">
            <option value="0" selected="selected">Select</option>
            <option value="1">Yes, and I have the previous version file and the git diff file</option>
            <option value="2">No, this is the first time, or I'm working with it (I have a draft)</option>
          </select>
        </div>
        </div>    
      </article>
    </div>
    <div class="tile is-vertical is-4">
      <article class="panel p-2 not-showing-at-startup ">
        <p class="panel-heading has-text-white third-question animated">
          Upload your files
        </p>    
        <div class="panel-block" id="previousTranslationFileDiv">
          <div class="file">
            <label class="file-label">
              <!--                  <input class="file-input" file-selector type="file" id="file-selector" name="resume" accept=".json" disabled="true">-->
              <input class="file-input" file-selector type="file" id="file-selector-prev" name="file-selector-prev"
                accept=".json">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Select a previous translation file
                </span>
              </span>
            </label>
          </div>
        </div>
        <div class="panel-block" id="diffFileDiv">
          <div class="file">
            <label class="file-label">
              <!--                  <input class="file-input" file-selector type="file" id="file-selector" name="resume" accept=".json" disabled="true">-->
              <input class="file-input" file-selector type="file" id="file-selector-diff" name="file-selector-diff">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Select a diff file
                </span>
              </span>
            </label>
          </div>
        </div>
        <div class="panel-block" id="language">
          <div class="file">
            <label class="file-label">
              <!--                  <input class="file-input" file-selector type="file" id="file-selector" name="resume" accept=".json" disabled="true">-->
              <input class="file-input" file-selector type="file" id="file-selector" name="file-selector" accept=".json">
          
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Choose a fileâ€¦
                </span>
              </span>
            </label>
          </div>
        </div>
      </article>
    </div>
  </div>  
</section>    

